<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_item_container1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="5dp"
    android:paddingBottom="30dp">

    <TextView
        android:id="@+id/sender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Sender:"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/senderName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/sender"
        android:layout_marginEnd="-40dp"
        android:text=""
        android:textSize="20sp" />

    <TextView
        android:id="@+id/send_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sender"
        android:layout_marginStart="10dp"
        android:layout_marginTop="42dp"
        android:layout_marginBottom="-169dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Time:"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/sendTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/senderName"
        android:layout_alignEnd="@+id/send_time"
        android:layout_marginTop="42dp"
        android:layout_marginEnd="-110dp"
        android:layout_marginBottom="-82dp"
        android:text=""
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/imageSticker"
        android:layout_width="50dp"
        android:layout_height="100dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="200dp"
        android:layout_marginEnd="15dp"
        android:layout_toEndOf="@+id/senderName"
        app:srcCompat="@drawable/cat1" />

    <TextView
        android:id="@+id/sticker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/sendTime"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="-110dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Sticker:"
        android:textSize="20sp"
        android:textStyle="bold" />


</RelativeLayout>